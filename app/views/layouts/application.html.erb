<!DOCTYPE html>
<html>
  <head>
    <title>BlogRor</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Lobster' %>

    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    
    <% flash.each do |name, msg| %>
      <%= content_tag(:div, msg, class: "alert") %>
    <% end %>

    <div class="name">
      <% if current_page?(about_path) %>
        <%= image_tag "about_shot.jpg", id: "about_shot" %>
      <% else %>
        <%= image_tag "headshot.jpg", id: "headshot" %>
      <% end %>
      <p>Noah Milstein</p>
      <p>Ahoj hoj, Internet</p>
    </div>

    <div class="nav">
      <%= link_to "Home", root_path %> /
      <%= link_to "About", about_path %> /
      <%= link_to "Blog", posts_path %> /
      <%= link_to "Tech Resume", resume_path %> /
      <a href="http://www.bostonstrengthcoach.com/">S&C Coaching</a> /
      <%= link_to "Contact Me", contact_path %>
    </div>

    <%= yield %>

  </body>
</html>
